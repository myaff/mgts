extends template

prepend page
	- var layout = 'home';
	- var currentPage = 'home';
	- var pageTitle = false;
	- var pageDesc = false;
	- var pageImg = false;

block content
	.page(class="page--" + currentPage)
		.fullpage
			for item, key in content.sections
				.section(data-anchor=key, id=key + "-id")
					+dyn(key)
		+modal('order-popup').modal--small.popup
			include components/order-form
		#masks-popup.fullsize-popup.popup
			include components/masks
		include components/main-menu
		#fp-menu.fullpage-menu.l-hidden-sm-down
			.fullpage-menu__inner
				for item, key in content.sections
					a.fullpage-menu__link.fp-link(href="#" + key, data-menuanchor=key) !{item.title}
		#fp-nav.fullpage-nav.l-hidden-sm-down
			.fullpage-nav__inner
				for item, key in content.sections
					a.fullpage-nav__link.fp-link(href="#" + key, data-menuanchor=key)
