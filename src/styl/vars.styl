$desktop = 'screen and (min-width: 990px)';

$xsHeight = 'screen and (max-height: 450px)';
$xsWidth = 'screen and (max-width: 450px)';
$msWidth = 'screen and (max-width: 768px)';
$msWidthLand = 'screen and (max-width: 767px) and (orientation: landscape)';
$msWidthPort = 'screen and (max-width: 767px) and (orientation: portrait)';
$smWidth = 'screen and (max-width: 1024px)';
$smHeight = 'screen and (max-height: 768px)';
$smWidthLand = 'screen and (max-width: 1024px) and (orientation: landscape)';
$smWidthPort = 'screen and (max-width: 1024px) and (orientation: portrait)';

$mdHeight = 'screen and (max-height: 799px)';
$mdWidth = 'screen and (max-width: 1309px)';
$lgHeight = 'screen and (min-height: 800px)';
$lgWidth = 'screen and (min-width: 1310px)';

$mDesktop = 'screen and (max-width: 1600px)';
