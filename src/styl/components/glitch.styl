.glitch {
  animation: glitch 2s steps(100) infinite;
}

$r = rgba(0,178,240,1); 
$g = rgba(72,70,151,1); 
$b = rgba(214,7,139,1); 
$px = 0; 
$px2 = 0;

mini-glitch($c1, $c2, $coeff, $start, $end)
  $interval = $end - $start
  for $i in ($start)..($end)
    {$i * 1%}
      if $i < $start + $interval / 2
        $px = $px + $coeff
        $px2 = -1 * $px
        text-shadow: ($px * 1px) 0 0 $c1, ($px2 * 1px) 0 0 $c2
      else
        $px = $px - 1
        $px2 = -1 * $px
        text-shadow: ($px * 1px) 0 0 $c1, ($px2 * 1px) 0 0 $c2
  $px = 0
  $px2 = 0

big-glitch($c1, $c2, $distance, $start, $end)
  for $i in ($start)..($end)
    {$i * 1%}
      if $i == $end
        text-shadow: 0 0 0 $c1, 0 0 0 $c2
      else
        $px = $distance
        $px2 = -1 * $px
        text-shadow: ($px * 1px) 0 0 $c1, ($px2 * 1px) 0 0 $c2
  $px = 0
  $px2 = 0

@keyframes glitch {
  mini-glitch($r, $b, 1, 0, 10)
  mini-glitch($r, $g, 0.5, 11, 20)
  mini-glitch($b, $g, 0.7, 21, 40)
  big-glitch($b, $g, 50, 41, 42)
  mini-glitch($r, $g, 0.5, 43, 50)
  mini-glitch($r, $b, 1, 51, 60)
  big-glitch($r, $g, 30, 61, 62)
  mini-glitch($r, $b, 0.5, 63, 70)
  big-glitch($r, $b, 70, 71, 72)
  mini-glitch($r, $b, 1, 73, 80)
  mini-glitch($r, $g, 0.5, 81, 90)
  big-glitch($g, $b, 60, 91, 92)
  mini-glitch($b, $g, 0.7, 92, 100)
}