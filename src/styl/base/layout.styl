/* ==========================================================================
  BASIC - LAYOUT
   ========================================================================== */
html, body {
  background: $white;
  font: normal $font-size-base/1.5 $font-base;
  color: $black;
  overflow-x: hidden;
  
  .is-scrolling {
    pointer-events: none;
  }
}
body {
  min-width: initial;
}
.l-container {
  relative();
  margin-right: auto
  margin-left: auto
  width: 100%;
  //min-width: ($container-widths.min + $grid-gutter);
  //max-width: ($container-widths.max + $grid-gutter);
  //padding: 0 ($grid-gutter / 2);
  padding: 0 2rem;

  &-fluid {
    relative();
    margin-right: auto
    margin-left: auto
    width: 100%;
    padding: 0 ($grid-gutter / 2);
    max-width: 117rem;
  }
}

.layout {
  min-size($container-widths.min, 100vh);
  width: 100vw;
  background: linear-gradient(270deg, #062B4B 6.54%, #062B4B 6.54%, rgba(6, 43, 75, 0.00552486) 27.43%, rgba(255, 255, 255, 0) 27.44%), linear-gradient(90deg, #062B4B 7.48%, rgba(6, 43, 75, 0) 24.16%), radial-gradient(1327.63px at 100% 3.47%, #01182A 0%, rgba(1, 24, 42, 0) 100%), #02213A;
  color: $white;

  .page {
    min-height: 100%;
    flex-grow: 1;
    opacity: 1;
  }

  &--home .page {
    width: calc(100% - 200px);
    margin: 0 auto;
    background: url('../img/home.png') top center no-repeat;
    background-size: auto 100vh;

    @media $display-breakpoints.md-and-down {
      width: calc(100% - 160px);
    }
  }

}

.layout {
  transition: filter 0.5s;

  .rotate & {
    filter: blur(10px);
  }
}

.page-bg {
  fixed(0px, 0px);
  size(100%);
}

.page-rotate {
  display: none;
  fixed(0px, 0px);
  size(100%);
  z-index: 999;
  background: url('../img/rotate.png') center no-repeat;
}

.l-spacer {
  flex-grow: 1
}

.l-float {
  &--left {
    float: left;
    
    ^[0]--outside& {
      margin-left: -52%;
    }
  }
  &--right {
    float: right;
  
    ^[0]--outside& {
      margin-right: -52%;
    }
  }
  &--outside {
    width: 75%;
  }
}

.st {
  position: static;
}

video {
  display: block;
  width: 100%;
  height: auto;
}

body > canvas, .wave-image {
  display: none;
}