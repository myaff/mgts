.btn {
  relative();
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  border: 2px solid transparent;
  font: 15px/16px $font-base;
  padding: 0.75rem;
  transform: translateZ(0);
  box-sizing: border-box;
  transition: all 0.3s;

  {hover-focus-active} {
    text-decoration: none;
    outline: none;
  }

  &--big {
    font-size: 20px;
    line-height: 1;
    font-weight: bold;
    padding: 15px;
    border-radius: 30px;
    width: 290px;
  }
  &--plain {
    size(1em);
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
  }
  &--plain-link {
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    font: 500 10px/1 $font-base;
    letter-spacing: 0.01em;
  }

  &--circle {
    min-width: 44px;
    circle(44px);
    font-size: 22px;
    padding: 10px;

    .icon {
      font-size: 20px;
      display: block;
    }
  }

  // colors
  &--default {
    get-button-variant(#fff, $primary);
  }
  &--primary {
    get-button-variant($primary, darker($primary, 0.2));
  }
  &--primary-outline {
    get-button-outline-variant($primary);
  }
}

.btn-menu,
.btn-close-menu {
  font-size: 40px;
  border: 0;
  padding: 7px;
  margin: -7px;
  color: $white;

  .icon {
    font-size: 25px;
  }
}

.btn-menu {
  transform: scaleX(1.3);
}

.btn-volume {
  &::after {
    content: '';
    display: block;
    absolute(-10%, 50%);
    size(2px, 120%);
    transform: rotate(-45deg);
    background: currentColor;
    opacity: 0;
    transition: opacity 0.3s;
  }

  &.off::after {
    opacity: 1;
  }
}

.btn-share {
  size(2.5rem);
  padding: 12.5px;
  margin: -12.5px;
}