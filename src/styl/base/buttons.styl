.btn {
  relative();
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  border: 2px solid transparent;
  font: 14px/16px $font-base;
  text-transform: uppercase;
  padding: 0.75rem 1.25rem;
  transform: translateZ(0);
  box-sizing: border-box;
  transition: all 0.3s;
  border-radius: 60px;

  {hover-focus-active} {
    text-decoration: none;
    outline: none;
  }

  &--big {
    font-size: 18px;
    line-height: 20px;
    font-weight: bold;
    min-width: 224px;

    @media $display-breakpoints.md-and-down {
      font-size: 14px;
      line-height: 18px;
      min-width: 186px;
    }
    @media $display-breakpoints.sm-and-down {
      font-size: vmin(14, 320);
      line-height: vmin(16, 320);
      padding: vmin(10, 320) vmin(20, 320);
      min-width: vmin(180, 320);
      border-width: vmin(2, 320);
    }
  }
  &--large {
    font-size: 18px;
    line-height: 20px;
    font-weight: bold;
    letter-spacing: 0.1em;
    padding: 20px;
    min-width: 260px;

    @media $display-breakpoints.sm-and-down {
      font-size: vmin(14, 320);
      line-height: vmin(16, 320);
      padding: 1em 1.5em;
      min-width: vmin(180, 320);
      letter-spacing: 0.02em;
      border-width: vmin(2, 320);
    }
  }
  &--plain {
    size(1em);
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
    border-radius: 0;
  }
  &--plain-link {
    background: transparent;
    padding: 0;
    min-width: 0;
    border: 0;
    border-bottom: 1px solid currentColor;
    padding-bottom: 2px;
    font: 500 10px/1 $font-base;
    letter-spacing: 0.01em;
    border-radius: 0;
  }

  &--square {
    font-size: 40px;
    padding: 10px;

    @media $display-breakpoints.sm-and-down {
      font-size: vmin(40, 320);
      padding: vmin(10, 320);
    }

    .icon {
      display: block;
      size(100%);
    }
  }

  &--circle {
    min-width: 44px;
    circle(44px);
    font-size: 22px;
    padding: 10px;

    .icon {
      font-size: 20px;
      display: block;
    }
  }

  // colors
  &--default {
    get-button-variant($white, $primary);
  }
  &--primary {
    get-button-variant(#00ACE7, $primary);
    box-shadow: 0px 2px 20px rgba(0, 172, 231, 0.5);
  }
  &--default-outline {
    get-button-outline-variant($white, $primary);
  }
  &--primary-outline {
    get-button-outline-variant($primary);
  }
}
