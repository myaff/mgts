.modal {
  fixed(0px, 0px);
  size(100vw, 100%);
  z-index: 9;
  display: none;
  overflow-y: auto;
  .layout & {
    size(100%, 100vh);
    absolute();
  }

  &__window {
    width: 100%;
    max-width: 950px;
    background: $white;
    absolute(50%, 50%);
    transform: translate(-50%, -50%);
    max-height: 100vh;
    border-radius: 33px;
    display: none;

    ^[0]--small & {
      max-width: 620px;
    }

    @media $smWidth {
      max-width: 100vw;
    }
    @media screen and (max-width: 1070px) {
      margin-top: 60px;
    }
  }

  &__close {
    absolute(18px);
    right: 14px;
    z-index: 5;
    size(40px);
    padding: 12px;
    color: #062B4B;
    cursor: pointer;

    @media screen and (max-width: 1070px) {
      right: 0;
      padding-right: 0;
      color: $primary;

      .modal--video & {
        color: $white;
      }
    }
  }

  &__inner {
    overflow-y: auto;
  }

  &__content {
    width: 100%;
    padding: 40px 60px 60px;
    @media $mobile {
      padding: (120*100/750)vw (50*100/750)vw (140*100/750)vw;
    }
    ^[0]--video & {
      padding: 0;

      .video {
        overflow: hidden;
      }
    }
  }
}

.fullsize-popup {
  display: none;
  z-index: 9;
  absolute(0px, 0px);
  size(100%, 100vh);
}