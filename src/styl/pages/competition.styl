.competition {
  align-items: flex-end;
  
  &__bg {
    background: url('../img/hero.png') top center no-repeat;
    background-size: contain;
  }
  .section {
    &__content,
    &__popup {
      max-width: 900px;
      padding: 46px 20px 90px;
      background: url('../img/content-lg.png') top center no-repeat;
      border-top-left-radius: 35px;
      border-top-right-radius: 35px;
      transform: translateY(100%);
      transition: transform 0.5s, opacity 0.3s 0.5s, z-index 0.1s 0.5s;
      opacity: 0;
      z-index: -9;

      &.active {
        transform: translateY(0%);
        opacity: 1;
        z-index: 2;
        transition: transform 0.5s, opacity 0.3s, z-index 0.1s;
      }

      @media $display-breakpoints.lg-and-down {
        max-width: vw(1160);
      }
      @media $display-breakpoints.md-and-down {
        max-width: 900px;
        padding: 30px 20px 70px;
      }
    }
    &__text {
      @media $display-breakpoints.lg-and-down {
        max-width: vw(580);
      }
      @media $display-breakpoints.md-and-down {
        max-width: 500px;
      }
    }
    &__popup {
      absolute(0, 50%, 0px);
      width: 80%;
      padding: 0;
      transform: translate(-50%, 100%);
      transition: transform 0.5s, opacity 0.3s 0.5s, z-index 0.1s 0.5s;
      opacity: 0;
      z-index: -9;

      &.code-popup {
        padding: 60px 20px;
        background: url('../img/content-big.png') top center no-repeat;
        border-top-left-radius: 35px;
        border-top-right-radius: 35px;
      }

      &.active {
        transform: translate(-50%, 0%);
        opacity: 1;
        z-index: 2;
        transition: transform 0.5s, opacity 0.3s, z-index 0.1s;
      }
    }
  }
}

.action-popup {
  flexy(center, stretch);
  &__auth {
    flex: 0 0 50%;
    border-top-left-radius: inherit;
    background: $white;
    color: #062B4B;
    padding: 60px 20px;
  }
  &__plug {
    flex: 0 0 50%;
    border-top-right-radius: inherit;
    padding: 60px 20px;
  }
}

.auth {
  &__heading {
    max-width: 240px;
    margin: 0 auto 30px;
  }
  &__list {
    flexy(center, center);
  }
  &__link {
    relative();
    display: block;
    flex: 0 0 64px;
    circle(64px);
    padding: 16px;
    margin: 0 7px;
    box-sizing: border-box;
    color: $white;

    {hover-focus-active} {
      color: $white;
    }

    .icon {
      size(100%);
    }

    &--fb {
      background: linear-gradient(146.03deg, #5688DD 0%, rgba(86, 136, 221, 0) 86.87%), #3E5D9F;
    }
    &--vk {
      background: linear-gradient(146.03deg, #87BBF6 0%, rgba(135, 187, 246, 0) 86.87%), #5181B8;
    }
  }
}
.plug {
  &__heading {
    max-width: 240px;
    margin: 0 auto 50px;
  }
}

.code {
  
  &__desc {
    margin: 30px auto;
    max-width: 430px;
  }

  &__share {
    margin: 30px auto;
  }

  &__note {
    margin: 30px auto;
  }

  &__promocode {
    width: 255px;
    margin: 30px auto 48px;
    padding: 20px;
    font: bold 28px/1 $font-base;
    letter-spacing: 0.005em;
    text-transform: uppercase;
    text-align center;
    background: $primary-alt;
    color: $white;
    box-shadow: 0px 0px 40px rgba(0, 178, 243, 0.5);

    &::before {
      content: '';
      display: block;
      absolute(-1px, -10px, -1px, -10px);
      background: url('../img/substract.svg') center no-repeat;
      background-size: contain;
    }
  }
}